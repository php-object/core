#!/usr/bin/env sh

set -eu

readonly rootDirectory=$(realpath $(dirname $(realpath $0))/../..)

if [ $(which docker || false) ]; then
    docker \
        run \
        -it \
        --rm \
        -v ${rootDirectory}:/app:ro \
        --entrypoint /app/bin/test/phpunit73 \
        phpobject/core:phpunit-php73
else
    phpunit
fi
