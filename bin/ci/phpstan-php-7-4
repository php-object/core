#!/usr/bin/env sh

set -eu

readonly rootDirectory=$(realpath $(dirname $(realpath $0))/../..)

if [ $(which docker || false) ]; then
    docker run \
        --rm \
        -it \
        -v ${rootDirectory}:/app \
        -w /app \
        --entrypoint=/app/bin/ci/phpstan-php-7-4 \
        phpobject/core:phpstan-php-7-4
else
    docker-entrypoint
fi
